{
  "extends": [
    "next",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "rules": {
    "@next/next/no-page-custom-font": "off",
    "@next/next/no-img-element": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "no-debugger": "error",
    "no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_"
    }],
    "no-undef": "error"
  },
  "env": {
    "browser": true,
    "es2023": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "__tests__/**/*"],
      "env": {
        "jest": true
      }
    }
  ]
}
