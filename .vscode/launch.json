{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js: Debug Server",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "true",
        "DEBUG_LEVEL": "debug",
        "DEBUG_API": "true",
        "DEBUG_DIRECTUS": "true",
        "DEBUG_HOOKS": "true",
        "DEBUG_COMPONENTS": "true",
        "DEBUG_REQUESTS": "true",
        "DEBUG_PERFORMANCE": "true"
      },
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "restart": true,
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js: Debug Client",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "true",
        "DEBUG_LEVEL": "debug"
      },
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "restart": true,
      "autoAttachChildProcesses": true,
      "serverReadyAction": {
        "pattern": "Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Next.js: Debug Browser",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${webRoot}/*",
        "webpack:///./*": "${webRoot}/*"
      },
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js: Debug API Only",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "true",
        "DEBUG_LEVEL": "debug",
        "DEBUG_API": "true",
        "DEBUG_DIRECTUS": "true",
        "DEBUG_REQUESTS": "true",
        "DEBUG_PERFORMANCE": "true"
      },
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "restart": true,
      "autoAttachChildProcesses": true
    }
  ],
  "compounds": [
    {
      "name": "Next.js: Full Stack Debug",
      "configurations": [
        "Next.js: Debug Server",
        "Next.js: Debug Browser"
      ],
      "stopAll": true
    }
  ]
}
  